<h1>10 Most Popular Dishes</h1>
<h3>The dishes added to the most lists</h3>

<% if @dishes.empty? || nil %>
  <%= render partial: "no_dishes" %>

<% else %>
  <br>

  <div class="inline">
    <ol>
    <% @dishes.each.with_index(1) do |dish, i| %>
        <li>
          <%= render partial: "list_item", locals: {dish: dish, i: i} %>
          <%= render partial: "popularity", locals: {dish: dish} %><br><br>
        </li>
    <% end %>
    </ol>
  </div>
  
<% end %>

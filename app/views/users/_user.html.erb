<%= form_for @user do |f| %>
  Name: <%= f.text_field :name, :class => "tbc", :placeholder => "Enter your name" %> <br>
  Email: <%= f.text_field :email, :class => "tbc", :placeholder => "Enter your email" %> <br>
  Password: <%= f.password_field :password %><br>
  Confirm password: <%= f.password_field :password_confirmation %><br>
  <%= f.submit %>
<% end %>

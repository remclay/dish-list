<h1>Viewing all Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <div>
    <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
    <strong>Type of cuisine:</strong> <%= restaurant.cuisine %><br>
    <strong>Location:</strong> <%= restaurant.location %><br>
    <strong>Dishes:</strong>
      <% restaurant.dishes.each do |dish| %>
          <li><%= dish.name %></li>
      <% end %>
  </div>
<% end %>

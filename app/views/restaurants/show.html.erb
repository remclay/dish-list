<div class="content">
  <h1><%= @restaurant.name %></h1>

  <strong>Type of cuisine:</strong> <%= @restaurant.cuisine %><br>
  <strong>Location:</strong> <%= @restaurant.location %><br>

  <strong>Wish-dishes:</strong>
  <% @restaurant.dishes.each do |dish| %>
      <li><%= dish.name %> | on <%= pluralize(dish.popularity, "Dish-List") %></li>
  <% end %><br>
</div>
